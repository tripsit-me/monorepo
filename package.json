{
  "name": "@tripsit/root",
  "private": true,
  "scripts": {
    "start": "./scripts/start.sh",
		"dev": "./scripts/dev.sh",
		"test": "npm run lint && lerna run test",
		"clean": "./scripts/clean.sh",
		"clean:docker": "source ./scripts/includes.sh && docker_clean",
    "lint": "eslint ./packages/**/*.js",
    "up": "./scripts.up.sh",
    "migrate:make": "npm run dev && knex migrate:make --",
    "migrate:latest": "npm run env && knex migrate:latest",
    "migrate:rollback": "npm run env && knex migrate:rollback",
		"migrate:reset": "./scripts/reset-db.sh",
		"env": "eval $(egrep -v '^#' .env | xargs)"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "fake-tag": "^2.0.0",
    "knex": "^0.21.1",
    "knex-stringcase": "^1.4.1",
    "pg": "^8.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.10.3",
    "@babel/plugin-proposal-optional-chaining": "^7.10.3",
    "babel-eslint": "^10.1.0",
    "concurrently": "^5.2.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.17.1",
    "glob": "^7.1.6",
    "lerna": "^3.22.1"
  }
}
